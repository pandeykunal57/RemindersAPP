<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Reminders" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/Blue</item>
        <item name="colorOnSurface">@color/blueGRAY</item>
        <item name="colorOnSurfaceVariant">@color/blueGRAYlight</item>
        <item name="colorPrimaryContainer">@color/blueGRAYlight_100</item>
    </style>
    <style name="card">
    <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>

    </style>
    <style name="icon">
            <item name="tint">?attr/colorPrimary</item>

    </style>
    <style name="text">
    <item name="fontFamily">sans-serif-medium</item>

    </style>
    <style name="text.heading">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>


    </style>
    <style name="text.value">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>



    </style>
    <style name="Theme.Reminders" parent="Base.Theme.Reminders" />
</resources>