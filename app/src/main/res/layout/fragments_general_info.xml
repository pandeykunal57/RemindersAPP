<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_insurance"
            style="@style/card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:padding="20dp">
                <ImageView
                    style="@style/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/image_view_INSURANCE"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/baseline_attach_money_24"
                    tools:ignore="ContentDescription" />
                <TextView
                    style="@style/text.heading"
                    android:id="@+id/text_INSURANCE_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_view_INSURANCE"
                    android:text="INSURANCE RENEWAL DATE"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    style="@style/text.value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_INSURANCE_heading"
                    app:layout_constraintStart_toStartOf="@id/text_INSURANCE_heading"
                    tools:text ="Date"
                    android:id="@+id/texttview_INSURANCE_value"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/card_view_WATER"
            style="@style/card">


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:padding="20dp">
                <ImageView
                    style="@style/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/image_view_WATER"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/baseline_water_drop_24"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_WATER_heading"
                    style="@style/text.heading"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:text="WATER BILL LAST DATE"
                    app:layout_constraintStart_toEndOf="@id/image_view_WATER"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/text.value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_WATER_heading"
                    app:layout_constraintStart_toStartOf="@id/text_WATER_heading"
                    tools:text ="DATE"
                    android:id="@+id/texttview_WATER_value"


                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/card_view_PAN"
            style="@style/card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:padding="20dp">
                <ImageView
                    style="@style/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/image_view_PAN"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/baseline_perm_identity_24"
                    tools:ignore="ContentDescription" />
                <TextView
                    style="@style/text.heading"
                    android:id="@+id/text_PAN_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_view_PAN"
                    android:text="PAN CARD NUMBER"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    style="@style/text.value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_PAN_heading"
                    app:layout_constraintStart_toStartOf="@id/text_PAN_heading"
                    tools:text ="AFQ64564B"
                    android:id="@+id/texttview_PAN_value"


                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</ScrollView>